    xmlns:xh="http://schemas.android.com/apk/res-auto">

    <CheckBoxPreference
        android:key="sound_enabled"
        android:dependency="mod_enabled"
        android:title="@string/pref_title_sound_enabled"
        android:summary="@string/pref_desc_sound_enabled"
        android:defaultValue="false" />

    <com.versobit.kmark.xhangouts.ui.FilePickerPreference
        xh:requestCode="101"
        android:key="sound_audiocallin"
        android:dependency="sound_enabled"
        android:title="@string/pref_title_sound_audiocallin"
        android:summary="@string/pref_desc_sound_default" />

    <com.versobit.kmark.xhangouts.ui.FilePickerPreference
        xh:requestCode="102"
        android:key="sound_audiocallout"
        android:dependency="sound_enabled"
        android:title="@string/pref_title_sound_audiocallout"
        android:summary="@string/pref_desc_sound_default" />

    <com.versobit.kmark.xhangouts.ui.FilePickerPreference
        xh:requestCode="103"
        android:key="sound_join"
        android:dependency="sound_enabled"
        android:title="@string/pref_title_sound_join"
        android:summary="@string/pref_desc_sound_default" />

    <com.versobit.kmark.xhangouts.ui.FilePickerPreference
        xh:requestCode="104"
        android:key="sound_leave"
        android:dependency="sound_enabled"
        android:title="@string/pref_title_sound_leave"
