<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:dependency="mod_enabled"
        android:key="ui_enter_key"
        android:title="@string/pref_title_ui_enter_key"
        android:defaultValue="0"
        android:entries="@array/pref_ui_enter_key_titles"
        android:entryValues="@array/pref_ui_enter_key_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <com.versobit.kmark.xhangouts.XSwitchPreference
        android:dependency="mod_enabled"
        android:key="ui_attach_anytime"
        android:title="@string/pref_title_ui_attach_anytime"
        android:summary="@string/pref_desc_ui_attach_anytime"
        android:defaultValue="true" />

    <com.versobit.kmark.xhangouts.XSwitchPreference
        android:dependency="mod_enabled"
        android:key="ui_hide_video_call"
        android:title="@string/pref_title_ui_hide_video_call"
        android:summary="@string/pref_desc_ui_hide_video_call"
        android:defaultValue="false" />

</PreferenceScreen>
